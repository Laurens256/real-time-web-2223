{
	"name": "real-time-web-2223",
	"version": "1.0.0",
	"description": "",
	"main": "dist/server.js",
	"scripts": {
		"clear": "rimraf ./dist",
		"prestart": "npm run clear && tsc && npm run prep",
		"start": "node dist/server.js",
		"predev": "tsc && npm run prep",
		"dev": "nodemon dist/server.js & npm run watch & tsc -w",
		"prep": "npm-run-all prep:*",
		"prep:css": "node dist/build-scripts/build-styles.js",
		"prep:js": "node dist/build-scripts/build-scripts.js",
		"prep:assets": "node dist/build-scripts/build-assets.js",
		"prep:views": "node dist/build-scripts/build-views.js",
		"watch": "run-p watch:*",
		"watch:css": "chokidar 'src/styles/**/*.css' --command 'npm run prep:css'",
		"watch:js": "chokidar 'src/scripts/**/*.ts' --command 'npm run prep:js'",
		"watch:assets": "chokidar 'src/assets/**/*' --command 'npm run prep:assets'",
		"watch:views": "chokidar 'views/**/*.hbs' --command 'npm run prep:views'"
	},
	"author": "Laurens256",
	"license": "MIT",
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/gulp": "^4.0.10",
		"@types/gulp-autoprefixer": "^0.0.33",
		"@types/gulp-clean-css": "^4.3.0",
		"@types/gulp-concat": "^0.0.33",
		"@types/gulp-uglify": "^3.0.7",
		"@types/node": "^18.15.3",
		"browserify": "^17.0.0",
		"chokidar-cli": "^3.0.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-strip-import-export": "^1.0.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"gulp-uglify": "^3.0.2",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"rimraf": "^4.4.1",
		"socket.io-client": "^4.6.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-handlebars": "^7.0.7",
		"socket.io": "^4.6.1"
	},
	"type": "module"
}
